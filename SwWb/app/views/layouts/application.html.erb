<!DOCTYPE html>
<html>
<head>
  <title>SongWriting WorkBench</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <body>

  <%# ### Added flash display %>
  <% for flash_type in [:error, :success] %>
    <% if flash[flash_type] %>
      <div class="flash flash-<%= flash_type %>">
        <%= flash[flash_type] %>
      </div>
    <% end %>
  <% end %>

<%= yield %>

  </body>
</html>
