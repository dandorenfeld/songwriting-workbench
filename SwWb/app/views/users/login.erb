    <div class="whole-page">

      <div class="logo-and-title">
        <div class="logo">
          <img src="/images/logo.jpg" alt="Logo" width="135" height="65"
               border="2" />
        </div>
        <br/>
        <div class="title">
          <img src="/images/banner.jpg" alt="Banner" width="585"
               height="158" border="2" />
          <h1>SongWriting WorkBench (SWWB)</h1>
        </div>
      </div>

      <div class="content">
        <h2><%= @page_title %></h2>

        <form method="post" action="<%= login_path %>">
