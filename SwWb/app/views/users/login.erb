          <div class="login-heading">Username: </div>
          <input type="text" name="username" value="<%= params["username"] %>"/>
          <br/>
          <div class="login-heading">Password: </div>
          <input type="password" name="password" value=""/>
          <br/><br/>
          <button style="margin-left:75px;">Sign In</button>
          &emsp;&emsp;<%= link_to "Sign In as guest", login_guest_path %>
          <br/><br/><br/><br/>
        </form>

        <div style="margin-left:75px;">
          <%= link_to "Return to home page", home_path %>
        </div>
        <br/><br/><br/>
      </div>

