<%= render :partial => "layouts/errors", :locals => { :object => @verse } %>

<%= render :partial => "layouts/header" %>

      <div class='content'>

        <h2><%= @page_title %></h2>

        <form method="POST" action="/verses">
          <br/>
          <div class="text-field">
            <div class="text-field-block">Verse Tag:</div>
            <input type="text" class="textbox-style" style="margin-right:160px;"
                   name="verse-tag" placeholder="Not Required"
                   value="<%= @verse.tag%>" size="50" maxlength="75"/>
            Maximum characters: 750
            <br/>
            <div class="textarea-field-block">Verse Content:</div>
            <textarea class="textarea-style" name="verse-content"
                      placeholder="Required" rows='20' cols='80'
                      maxlength='750'><%= @verse.content %></textarea>
          </div>

          <br/>
          <div class="add-edit-verse-submit-field">
            <input type="submit" name="create" value ="Create Verse">
          </div>
          <input type="submit" name="cancel" value="Cancel">

        </form>

      </div>

<%= render :partial => "layouts/footer" %>
